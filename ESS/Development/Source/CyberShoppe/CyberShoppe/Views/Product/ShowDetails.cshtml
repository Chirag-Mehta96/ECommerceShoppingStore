@model IEnumerable<CyberShoppe.Models.Product>

<h2>Product Details</h2>

<p>
    @Html.ActionLink("Create New", "Create")
    @Html.ActionLink("Categories", "ShowAll","Category")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Model_Number)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Model_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Unit_Cost)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.P_Description)
        </th>
       
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Model_Number)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Model_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Unit_Cost)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.P_Description)
        </td>
       
        <td>
            @Html.ActionLink("Edit", "EditProduct", new { id=item.Product_Id }) |
            @Html.ActionLink("Delete", "DeleteProduct", new { id=item.Product_Id })
        </td>
    </tr>
}

</table>
