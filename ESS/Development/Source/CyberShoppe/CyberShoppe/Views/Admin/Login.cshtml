
@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>

<form method="post">

    <div class="form-horizontal">
        <div class="form-group">
            <label class="control-label col-md-2" id="Username" name="Username">USERNAME</label>
            <input type="text" id="Username" name="Username" class="form-control" />
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" id="Password" name="Password">PASSWORD</label>
            <input type="password" id="Password" name="Password" class="form-control" />
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Login" class="btn btn-default" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <label class="label-danger">@ViewBag.Message</label>
            </div>
        </div>
    </div>
</form>



