@model CyberShoppe.Models.Customer

@{
    ViewBag.Title = "Login";
}

<script src="https://code.jquery.com/jquery-2.1.0.min.js"></script>
<body>
    <form method="post">
        <div id="formWrapper">
            <div id="form">
                <div class="logo">
                    <h1 class="text-center head">Login</h1>
                </div>
                <div class="form-item">

                    <p class="formLabel">Email</p>
                    <input type="email" id="Email" name="Email" class="form-style" autocomplete="off" />

                </div>
                <div class="form-item">
                    <p class="formLabel">Password</p>
                    <input type="password" id="Password" name="Password" class="form-style" autocomplete="off" />



                    <!-- <div class="pw-view"><i class="fa fa-eye"></i></div> -->

                </div>

                <div style="color:red">
                    @if (IsPost && @ViewData["errorMsg"] != null)
                    {
                        foreach (var item in (List<string>)ViewData["errorMsg"])
                        {
                            <p>@item</p>
                        }
                    }
                </div>
                <h5 style="color:red;"> @ViewBag.LoginError</h5>
                <div class="form-item">
                    <p class="pull-left"><a href="Insert">Register</a></p>

                    <input type="submit" class="login pull-right" value="Log In">

                    @*<label style="color:red" class="errorMsg">@Html.DisplayFor(model => model.LoginError)</label>*@
                    <div class="clear-fix"></div>
                </div>
            </div>
        </div>
    </form>

</body>

<script src="~/Scripts/Login.js"></script>
<link href="~/Content/LoginStyle.css" rel="stylesheet" />

<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
